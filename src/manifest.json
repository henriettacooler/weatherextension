{
  "manifest_version": 2,
  "name": "How's the Weather?",
  "homepage_url": "http://localhost:8080/",
  "description": "It's so much more important to know what temperature it actually feels like, don't you think?",
  "default_locale": "en",
  "permissions": [
    "<all_urls>",
    "*://*/*"
  ],
  "icons": {
    "16": "/icons/sunemoji.png",
    "48": "/icons/sunemoji.png",
    "128": "/icons/sunemoji.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "How's the Weather?",
    "default_icon": {
      "19": "/icons/sunemoji.png",
      "38": "/icons/sunemoji.png"
    }
  }
}
